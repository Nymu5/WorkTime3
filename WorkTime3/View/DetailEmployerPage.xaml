<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controller="clr-namespace:WorkTime3.Controller"
             xmlns:controls="clr-namespace:WorkTime3.Resources.Templates"
             x:Class="WorkTime3.View.DetailEmployerPage">
    <ContentPage.BindingContext>
        <controller:DetailEmployerController />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid>
            <StackLayout Orientation="Vertical">
                <controls:DetailLabel ControlTemplate="{StaticResource DetailLabelTemplate}" 
                                      Content="{Binding Employer.Name}"
                                      Label="Name"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>